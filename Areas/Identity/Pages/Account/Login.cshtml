@page
@model LoginModel

@{
    ViewData["Title"] = "تسجــيل الدخول";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>
<div class="row text-right">
    <div class="col-md-6 mx-auto card shadow">
        <section class="mt-2">
            <form id="account" method="post">  
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">البريد الإلكتروني</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">تذكرني؟

                            <input asp-for="Input.RememberMe" /> 
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn b-primary">تسجيل دخول</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">نسيت كلمة المرور?</a>
                    </p>
                     
                     
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

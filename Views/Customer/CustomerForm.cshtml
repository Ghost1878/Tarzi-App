@model Customer
<!-- Creat new Customer Modal -->
.<div class="container-fluid mx-4 shadow">
 
    <div class="row  bg-primary">
        <div class="col-sm-6 px-0">
        <h3 class="p-2 text-white"> @(Model.CustomerId != 0 ? "تعديـل بيانات العميل" : "إضـــافة عميــل جديد") </h3>
        </div>
        <div class="col-sm-6">
            <a asp-action="Index" class="btn my-2 p-2  b-default float-left">رجوع الى القائمة</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 p-2">
            <form asp-action="CustomerForm" method="POST" autocomplete="off">
                @* <div asp-validation-summary="All" class="text-danger mr-3"></div> *@
                @if (Model.CustomerId != 0)
                {
                    <input type="hidden" asp-for="CustomerId" />
                }
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="مثال: محمد عبدالله    ">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="jefo@sudan.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input type="tel" asp-for="Phone" class="form-control" placeholder="0123456789" minlength="10" maxlength="10">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn b-primary float-left mb-2" value="حـفـظ" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class=" float-left ml-5 mt-2 bold">
                        <i class=""></i>
                        إلغــــاء


                    </a>
                </div>
            </form>
        </div>
    </div> 
    </div>

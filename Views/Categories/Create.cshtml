@model Category
<!-- Creat new Customer Modal -->

<div class="container shadow border my-2">
    <div class="row  bg-primary">
        <div class="col-sm-6 px-0">
            <h3 class="p-2 text-white"> @(Model.Id != 0 ? "تعديـل بيانات الصنف" : "إضـــافة صنف جديد") </h3>
        </div>
        <div class="col-sm-6">
            <a asp-action="Index" class="btn my-2 p-2  b-default float-left">رجوع الى القائمة</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 p-2">
            <form asp-action="Create" method="POST" autocomplete="off">
                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }
                <div class="form-group">
                    <label asp-for="Name">نوع الملبوس</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">وصف الملبوس</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn b-primary float-left mb-2" value="حـفـظ" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" class=" float-left ml-5 mt-2 bold">إلغــــاء</a>
                </div>
                @*<div class="form-group">
                    <input type="submit" class="btn b-primary float-left mb-2" value="حـفـظ" />

                </div>*@
            </form>
        </div>
    </div>
</div>
 

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}